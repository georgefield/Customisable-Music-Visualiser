void main(){
	
	float hzFrac = vis_fragmentUV.x;
	float screenFrac = pow(vis_FT0_size, hzFrac - 1);
	int index = int(screenFrac * vis_FT0_size);


	if (vis_fragmentUV.y < abs(vis_FT0_harmonics[index])){
		float brightness = vis_fragmentUV.y / abs(vis_FT0_harmonics[index]);
		vis_outputColour = vis_inColour * brightness;
	}else{
		vis_outputColour = vec4(0);
	}
}