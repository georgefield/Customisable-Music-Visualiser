void main(){
	
	float hzFrac = vis_fragmentUV.x;
	float screenFrac = pow(vis_FTmaster_size, hzFrac - 1);
	int index = int(screenFrac * vis_FTmaster_size);


	if (vis_fragmentUV.y < abs(vis_FTmaster_harmonics[index])){
		float brightness = vis_fragmentUV.y / abs(vis_FTmaster_harmonics[index]);
		if (vis_FTmaster_harmonics[index] >= 0){
			vis_outputColour = vis_inColour * brightness;
		}
		else{
			vis_outputColour = vis_inColour * brightness;
		}
	}else{
		vis_outputColour = vec4(0);
	}
}